<div class="dialogs">
    <h3>Please confirm</h3>
    <p>
        @((MarkupString)MessageInput)
    </p>
    <button type="button" @onclick="Cancel" class="btn btn-info btn-sm">No</button>
    <button type="button" @onclick="Ok" class="btn btn-info btn-sm">Yes</button>&nbsp;
</div>




@code {
        /// Gets or sets the modal instance.
        /// </summary>
        /// <value>The modal instance.</value>
        [CascadingParameter]
        BlazoredModalInstance ModalInstance { get; set; }

        /// <summary>
        /// Gets or sets the message input.
        /// </summary>
        /// <value>The message input.</value>
        [Parameter]
        public string MessageInput { get; set; }

        /// <summary>
        /// Cancels this instance.
        /// </summary>
        private void Cancel()
        {
            ModalInstance.CancelAsync();
        }

        /// <summary>
        /// Oks this instance.
        /// </summary>
        private void Ok()
        {
            ModalInstance.CloseAsync(ModalResult.Ok("Yes"));
        }

}
